check process mysql with pidfile /var/run/mysqld/mysqld.pid
   group database
#   start program = "/etc/init.d/mysql restart"		# legacy: pre-lucid / pre-upstart
#   stop program = "/etc/init.d/mysql stop"			# legacy: pre-lucid / pre-upstart
   start program = "service mysql start"
   stop program = "service mysql stop"
   if failed host 127.0.0.1 port 3306 protocol mysql within 2 cycles then start
   if 99 restarts within 99 cycles then timeout
