 check process kav with pidfile /var/run/aveserver.pid
   group virus
   start program = "/etc/init.d/kav-server restart"
   stop  program = "/etc/init.d/kav-server stop"
   if failed unixsocket /var/run/aveserver within 2 cycles then start
   if 99 restarts within 99 cycles then timeout
#   depends on kav_bin
#   depends on kav_rc

