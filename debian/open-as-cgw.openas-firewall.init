### BEGIN INIT INFO
# Provides:          openas-firewall
# Required-Start:    $local_fs $network $remote_fs $syslog
# Required-Stop:     $local_fs $network $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Init script for Open AS Firewall.
# Description:       Init script for Open AS Firewall.
### END INIT INFO

PATH=/sbin:/bin:/usr/sbin:/usr/bin
PIDFILE=/var/run/openas-firewall.pid
DAEMON=/usr/bin/firewall.sh
NAME=openas-firewall
DESC="Open AS Firewall"

do_start()
{
    echo -n "Starting $DESC: "    
    $DAEMON
    echo "$NAME."
}
do_stop()
{
    echo -n "Stopping $DESC: "
    # Flush tables
    iptables -F
    iptables -t nat -F
    iptables -t mangle -F
    iptables -X
    iptables -t nat -X
    iptables -t mangle -X
    # Set default-policies
    iptables -P INPUT ACCEPT
    iptables -P OUTPUT ACCEPT
    iptables -P FORWARD ACCEPT
    echo "$NAME."
}

case "$1" in
  start)
    do_start
    exit 0
    ;;

  stop)
    do_stop
    exit 0
    ;;
    
  restart)
    do_stop
    do_start
    exit 0
    ;;
    
  status)
    echo "Filter:"
    iptables -L -vn
    echo "NAT:"
    iptables -t nat -L -vn
    echo "Mangle:"
    iptables -t mangle -L -vn
    exit 0
    ;;

  *)
    echo "Usage: $0 {start|stop|restart|status}" >&2
    exit 0
    ;;
esac
